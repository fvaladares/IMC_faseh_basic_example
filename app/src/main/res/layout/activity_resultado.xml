<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoActivity">



    <TextView
        android:id="@+id/tvBoasVindas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/boas_vindas"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tvImc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvImcLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="@string/resultado"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvImc"
        app:layout_constraintEnd_toStartOf="@id/tvImc"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tvBoasVindas" />


    <TextView
        android:id="@+id/tvImc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="@string/imc"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvClassificacao"
        app:layout_constraintEnd_toEndOf="@id/tvBoasVindas"
        app:layout_constraintStart_toEndOf="@id/tvImcLabel"
        app:layout_constraintTop_toBottomOf="@id/tvBoasVindas" />

    <TextView
        android:id="@+id/tvClassificacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/ivImc"
        app:layout_constraintEnd_toEndOf="@id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="@id/tvBoasVindas"
        app:layout_constraintTop_toBottomOf="@id/tvImc"
        tools:text="@tools:sample/lorem" />

    <ImageView
        android:id="@+id/ivImc"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@id/tvNotaAlerta"
        app:layout_constraintEnd_toEndOf="@id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="@id/tvBoasVindas"
        app:layout_constraintTop_toBottomOf="@id/tvClassificacao"
        tools:src="@drawable/imc_01" />


    <TextView
        android:id="@+id/tvNotaAlerta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/alerta_peso"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="@id/tvBoasVindas"
        app:layout_constraintTop_toBottomOf="@id/ivImc" />

</androidx.constraintlayout.widget.ConstraintLayout>